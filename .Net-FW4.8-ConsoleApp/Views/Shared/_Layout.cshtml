<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AirportFlights</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/style.css" /> 
    <script src="~/js/site.js"></script>
</head>
<body>
    <div class="container">
        <header>
            <nav>
                <ul id="navMenu" class="main-nav">
                    <li><a href="@Url.Action("Index", "Home")">Home</a></li>
                    <li><a href="@Url.Action("Index", "Airports")">Airports</a></li>
                    <li><a href="@Url.Action("Index", "Planes")">Planes</a></li>
                    <li><a href="@Url.Action("Index", "Flights")">Flights</a></li>
                    <li><a href="@Url.Action("Index", "PassengerBookings")">Passenger Bookings</a></li>
                </ul>
            </nav>
        </header>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- JavaScript to toggle dropdown menu -->
    <script>
        var navMenu = document.getElementById('navMenu');

        // Toggle active class on click
        navMenu.addEventListener('click', function () {
            navMenu.classList.toggle('active');
        });

        // Close dropdown when clicking outside menu
        document.addEventListener('mouseup', function (e) {
            if (!navMenu.contains(e.target)) {
                navMenu.classList.remove('active');
            }
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
