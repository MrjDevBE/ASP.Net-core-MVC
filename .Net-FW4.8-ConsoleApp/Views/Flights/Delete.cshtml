@model TestUMS.Models.Flight

@{
    ViewData["Title"] = "Delete Flight";
}

<h2>Delete Flight</h2>

<h4>Flight</h4>
<hr />
<div>
    <h4>Are you sure you want to delete this?</h4>
    <div>
        <h5>@Model.FlightNumber</h5>
        <dl class="row">
            <dt class="col-sm-2">
                Flight Number
            </dt>
            <dd class="col-sm-10">
                @Model.FlightNumber
            </dd>
            <dt class="col-sm-2">
                Airport Name
            </dt>
            <dd class="col-sm-10">
                @Model.AirportName
            </dd>
            <dt class="col-sm-2">
                Plane Code
            </dt>
            <dd class="col-sm-10">
                @Model.Plane
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index">Back to List</a>
        </form>
    </div>
</div>
